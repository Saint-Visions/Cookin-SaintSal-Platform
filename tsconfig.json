{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "preserve", // Next.js handles JSX transformation
    "strict": true, // Enables strict type checking options
    "esModuleInterop": true, // Ensures compatibility with CommonJS modules
    "skipLibCheck": true, // Skips library type checks for faster build times
    "allowImportingTsExtensions": true, // Allows importing TypeScript extensions
    "moduleResolution": "bundler", // Uses the bundler's resolution strategy
    "baseUrl": ".", // Base directory for resolving paths
    "types": [
      "node" // Type definitions for Node.js
    ],
    "forceConsistentCasingInFileNames": true, // Ensures case consistency in file names
    "resolveJsonModule": true, // Allows importing of JSON modules
    "noEmit": true, // Do not emit output files; Next.js handles it
    "isolatedModules": true, // Ensures that the code is properly isolated for SWC/Babel
    "paths": {
      "@/*": [
        "src/*"
      ] // Adds path alias for `@`
    },
    "allowJs": true, // Allows JavaScript files to be imported
    "incremental": true, // Enables incremental compilation for faster builds
    "plugins": [
      {
        "name": "next" // Ensures that Next.js specific settings are applied
      }
    ]
  },
  "include": [
    "next-env.d.ts", // Includes Next.js types
    "src/**/*" // Includes all files in the src directory
    ,
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules", // Excludes node_modules from the build
    "build", // Excludes build folder
    "dist", // Excludes dist folder
    ".next", // Excludes the .next build folder
    "out" // Excludes static export folder
  ]
}
