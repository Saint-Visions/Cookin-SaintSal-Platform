{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve", // Next.js handles JSX transformation
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".", // Base directory for resolving paths
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true, // Do not emit any files; Next.js handles it
    "isolatedModules": true, // Required for SWC/Babel to work properly
    "paths": {
      "@/*": ["src/*"] // Adding path alias for `@`
    }
  },
  "include": [
    "src/**/*", // Include all files in src
    "next-env.d.ts" // This is auto-generated by Next.js, don't remove it
  ],
  "exclude": [
    "node_modules", // Don't include node_modules
    "build", // Exclude build folder
    "dist", // Exclude dist folder
    ".next", // Exclude the .next build folder
    "out" // Exclude static export folder
  ]
}

